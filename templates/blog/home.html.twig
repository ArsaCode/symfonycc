{% extends 'base.html.twig' %}

{% block title %}
    Accueil - SymBlog
{% endblock %}

{% block body %}
<section class="articles">
    {% for article in articles %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.date | date('d/m/Y') }} Ã  {{ article.date | date('H:i') }}</div>
        <div class="content">
            <img src={{ article.image }} alt="">
            <p>{{ article.content }}</p>
            <a href="{{ path('show', {'id':article.id}) }}" class="btn btn-primary">Lire la suite</a>
        </div>
    </article>
    {% endfor %}
</section>
{% endblock %}