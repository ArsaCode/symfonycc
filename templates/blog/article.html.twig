{% extends "base.html.twig" %}

{% block title %}
Article {{ article.id }}
{% endblock %}

{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.date | date('d/m/Y') }} Ã  {{ article.date | date('H:i') }}</div>
        <div class="content">
            <img src={{ article.image }} alt="">
            <br>
            {{ article.content | raw }}
        </div>
        <hr>
        <a href="{{ path('edit', {'id':article.id}) }}" class="btn btn-primary">Modifier cet article</a>
    </article>

    <section id="comments">
    {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }} <small>(le {{ comment.date | date('d/m/Y') }})</small>
                </div>
                <div class="col">
                    {{ comment.content }}
                </div>
            </div>
        </div>
        <hr>
    {% endfor %}
    </section>
{% endblock %}